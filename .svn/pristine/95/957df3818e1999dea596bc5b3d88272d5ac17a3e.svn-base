<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.supntc.dao.SupNtcDao">
	<!-- 목록 조회 -->
	<select id="noticelist" resultType="kr.happyjob.study.supntc.model.NoticeModel">
	 select noti.nt_no
	 		, noti.nt_title
	 		, noti.nt_contents
	 		, noti.nt_cnt
	 		, noti.enr_user
	 		, noti.enr_date
	 		, noti.upd_user
	 		, noti.upd_date
	 		, ui.name
	 		, ui.user_type
	 	from tb_notice noti
	 		join tb_userinfo ui on ui.loginID = noti.enr_user
	 	<where>
	 	<if test="(sname != null) and (!sname.equals(''))">
	 		<choose>
	 			<when test="searchKey eq 'title'.toString()">
	 				and noti.nt_title LIKE CONCAT('%', #{sname}, '%')
	 			</when>
	 			<when test="searchKey eq 'cont'.toString()">
					and noti.nt_contents LIKE CONCAT('%', #{sname}, '%')	 			
	 			</when>
	 			<otherwise>
	 				and ( noti.nt_title LIKE CONCAT('%', #{sname}, '%')
	 					or noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
	 				)
	 			</otherwise>
	 		</choose>
	 	</if>
	 	and noti.enr_user = 'admin'
	 	and ui.user_type = 'M'
	 	</where>
	 	ORDER BY noti.enr_date desc
	 	LIMIT #{pageindex}, #{pageSize}
	</select>
	
		<!-- 목록 총 갯수 조회 -->
	<select id="countnoticelist" resultType="int">
		select count(*)
          from tb_notice noti
                join tb_userinfo ui on ui.loginID = noti.enr_user   
		<where>
		<if test="(sname != null) and (!sname.equals(''))">
				<choose>
					<when test="searchKey eq 'title'.toString()">
						and noti.nt_title Like CONCAT('%', #{sname}, '%')
					</when>
					<when test="searchKey eq 'cont'.toString()">
						and noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
					</when>
					<otherwise>
						 and (   noti.nt_title Like CONCAT('%', #{sname}, '%')
						       or noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
						       )
					</otherwise>
				</choose>
			</if>
	 	and noti.enr_user = 'admin'
	 	and ui.user_type = 'M'		
		</where>		
	</select>
	
	<!-- 하나 조회 -->
	<select id="noticeselectone" resultType="kr.happyjob.study.supntc.model.NoticeModel">
	 select noti.nt_no
	 		, noti.nt_title
	 		, noti.nt_contents
	 		, noti.nt_cnt
	 		, noti.enr_user
	 		, noti.enr_date
	 		, ui.name
	 		, ui.user_type
	 	from tb_notice noti
	 		join tb_userinfo ui on ui.loginID = noti.enr_user
	 	where noti.nt_no = #{nt_no}
	</select>
	
	<!-- 글 등록 -->
	<insert id="insert">
		<selectKey resultType="int" keyProperty="no" order="BEFORE">
			select ifnull(max(nt_no), 0) +1 from tb_notice
		</selectKey>
		insert into tb_notice (
						  nt_no
						, nt_title
						, nt_contents
						, enr_user
						, enr_date
				) values (
							#{no}
							,#{nt_title}
							,#{nt_contents}
							,#{enr_user}
							,now()
					)
	</insert>
	
	<!-- 수정 -->
	<update id="update">
		update tb_notice
			set nt_title = #{nt_title}
				, nt_contents = #{nt_contents}
				, upd_user = #{enr_user}
				,  upd_date = now()
		where nt_no = #{nt_no}
	</update>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete from tb_notice
		where nt_no = #{nt_no}
	</delete>
	
	<!--  조회수 증가 -->
	<update id="updateViewCnt">
		update tb_notice
			set nt_cnt = ifnull(nt_cnt, 0) + 1
		where nt_no = #{nt_no}
	</update>
</mapper>