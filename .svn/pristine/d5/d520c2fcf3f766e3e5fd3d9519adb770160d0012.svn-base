<input type="hidden" id="totalcnt" name="totalcnt" value="${totalcnt }"/>
<input type="hidden" id="action"  name="action"  />
<input type="hidden" id="rpy_no"  name="rpy_no"  value="${reply.rpy_no}"/> 
