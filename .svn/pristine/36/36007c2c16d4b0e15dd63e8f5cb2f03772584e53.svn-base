<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.cmmntc.dao.CmmNtcDao">
	<!-- 목록 조회 -->
	<select id="noticelist" resultType="kr.happyjob.study.cmmntc.model.NoticeModel">
	select noti.nt_no
		,	noti.nt_title
		,	noti.nt_contents
		,	noti.nt_cnt
		,	noti.enr_user
		,	noti.enr_date
		,	noti.upd_user
		,	noti.upd_date
		,	ui.name
		,	ui.user_type
	from tb_notice noti
		inner join tb_userinfo ui on ui.loginID = noti.enr_user
			and (ui.user_type = 'T' or ui.user_type = 'S') 
	where ui.user_type != 'M'
		<if test="(sname != null) and (!sname.equals(''))">
			<choose>
				<when test="searchKey eq 'title'.toString()">
					and noti.nt_title LIKE CONCAT('%', #{sname}, '%')
				</when>
				<when test="searchKey eq 'cont'.toString()">
					and noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
				</when>
				<when test="searchKey eq 'writer'.toString()">
					and ui.loginID LIKE CONCAT('%', #{sname}, '%')
				</when>
				<otherwise>
					and (noti.nt_title LIKE CONCAT('%', #{sname}, '%')
						or noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
						or ui.loginID LIKE CONCAT('%', #{sname}, '%')
					)
				</otherwise>
			</choose>
		</if>
	 	ORDER BY noti.enr_date desc
	 	LIMIT #{pageindex}, #{pageSize}			
	</select>
	
			<!-- 목록 총 갯수 조회 -->
	<select id="countnoticelist" resultType="int">
		select count(*)
          from tb_notice noti
                join tb_userinfo ui on ui.loginID = noti.enr_user   
		where (ui.user_type = 'T' or ui.user_type = 'S') 
		<if test="(sname != null) and (!sname.equals(''))">
				<choose>
					<when test="searchKey eq 'title'.toString()">
						and noti.nt_title Like CONCAT('%', #{sname}, '%')
					</when>
					<when test="searchKey eq 'cont'.toString()">
						and noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
					</when>
					<when test="searchKey eq 'writer'.toString()">
						and ui.loginID LIKE CONCAT('%', #{sname}, '%')
					</when>
					<otherwise>
						 and (   noti.nt_title Like CONCAT('%', #{sname}, '%')
						       or noti.nt_contents LIKE CONCAT('%', #{sname}, '%')
						       or ui.loginID LIKE CONCAT('%', #{sname}, '%')
						       )
					</otherwise>
				</choose>
			</if>				
	</select>
	
	<!-- 상세조회 -->
	<select id="noticeselectone" resultType="kr.happyjob.study.cmmntc.model.NoticeModel">
	select noti.nt_no
			, noti.nt_title
			, noti.nt_contents
			, noti.nt_cnt
			, noti.enr_user
			, noti.enr_date
			, ui.name
			, ui.user_type
			, ui.loginID
		from tb_notice noti
			join tb_userinfo ui on ui.loginID = noti.enr_user
	where noti.nt_no = #{nt_no}
	</select>
	
	<!-- 댓글 조회 -->
	<select id="noticeReply" resultType="kr.happyjob.study.cmmntc.model.NoticeReply">
		select nr.nt_no
				,	nr.rpy_no
				,	nr.rpy_contents
				,	nr.enr_user
				,	nr.enr_date
				,	nr.upd_date
				,	nr.upd_user
				,	ui.loginID
				,	ui.name
				,	ui.user_type
			from tb_notice_reply nr
				join tb_userinfo ui on ui.loginID = nr.enr_user
			left join tb_notice noti on noti.nt_no = nr.nt_no
		where nr.nt_no = #{nt_no} and nr.rpy_no = #{rpy_no}
		order by enr_date desc
	</select>
	
	<!-- 댓글 등록 -->
	<insert id="insertRp">
		insert into tb_notice_reply (
								nt_no
							,	enr_user
							,	enr_date
							,	rpy_no
							,	rpy_contents
		)	values (
							#{no}
						,	#{enr_user}
						,	now()
						,	#{rpy_no}
						,	#{rpy_contents}
		)
	</insert> 
	
		<!-- 글 등록 -->
	<insert id="insert">
		<selectKey resultType="int" keyProperty="no" order="BEFORE">
			select ifnull(max(nt_no), 0) +1 from tb_notice
		</selectKey>
		insert into tb_notice (
						  nt_no
						, nt_title
						, nt_contents
						, enr_user
						, enr_date
				) values (
							#{no}
							,#{nt_title}
							,#{nt_contents}
							,#{enr_user}
							,now()
					)
	</insert>
	
	<!-- 수정 -->
	<update id="update">
		update tb_notice 
			set nt_title = #{nt_title}
				, nt_contents = #{nt_contents}
				, upd_user = #{enr_user}
				, upd_date = now()
		where nt_no = #{nt_no}
	</update>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete from tb_notice 
		where nt_no = #{nt_no}
	</delete>
	
	<!--  조회수 증가 -->
	<update id="updateViewCnt">
		update tb_notice
			set nt_cnt = ifnull(nt_cnt, 0) + 1
		where nt_no = #{nt_no}
	</update>
</mapper>